<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <!-- css文件載入 -->
    <!-- css文件載入 -->

    <link rel="stylesheet" href="@Url.Content("~/Scripts/bootstrap3.3.7/css/bootstrap.css")" type="text/css" />


    <!-- js文件載入 -->
    <script charset="utf-8" src="@Url.Content("~/Scripts/bootstrap3.3.7/jquery.min.js")" type="text/javascript"></script>

    <script charset="utf-8" src="@Url.Content("~/Scripts/bootstrap3.3.7/js/bootstrap.min.js")" type="text/javascript"></script>


    @RenderSection("scripts", required: false)
</head>
<body>

    <div class="container text-center" style="background:#ffffff;padding-left:0px;padding-right:0px;padding-bottom:0px;margin-bottom:0px;">
        <div class="container" style="background:#009fa8;padding-bottom:0px;margin-bottom:0px;">

            <div class="row clearfix">
                <div class="col-xs-4 text-left hidden-xs" style="padding:20px"><img src="~/images/logo_denglu.png" /></div>
                <div class="col-xs-12 col-sm-12 col-md-12 text-left align-middle" style="padding:20px;font-size:30px;font-family:Arial;font-weight:700;color:white">Open Day回馈问卷</div>

            </div>


        </div>



        @RenderBody()




    </div>


    <!-- 模态框（Modal） -->
    <div class="modal " id="KcisPopModal" tabindex="-1" role="dialog"  aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header" id="KcisPopTitleDiv">

                    <h4 class="modal-title" id="KcisPopTitle"></h4>
                </div>

                <div class="modal-body" id="KcisPopContent"></div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

</body>
</html>
<script type="text/javascript">


    //弹出视窗初始化
    var m_top = ($(window).height() - $('.modal-dialog').height()) / 2;
    $('#KcisPopModal').modal({
        keyboard: false,
        backdrop: 'static',
        show: false
    })

    //置中弹出
    $('.modal-dialog').css({
        'margin-top': m_top
    });

</script>