@if (Session["UserProfile"] != null && ((Kcis.Models.UserModel)Session["UserProfile"]).UserId != "")
{
    Kcis.Models.UserModel user = (Kcis.Models.UserModel)Session["UserProfile"];
    <text>
        <span style="color:white">你好，@user.UserName</span>
        @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()">注销</a>
        }
    </text>
} 
